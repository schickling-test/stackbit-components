{
    "compilerOptions": {
        "target": "es2020",
        "module": "commonjs",
        "lib": ["dom", "dom.iterable", "esnext"],
        "allowJs": true,
        "skipLibCheck": true,
        "strict": false,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "declaration": true,
        "esModuleInterop": true,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "jsx": "react",
        "outDir": "./dist",
        "tsBuildInfoFile": "./dist/.tsbuildinfo",
        "rootDir": "./src",
		"baseUrl": ".",
        "paths": {
			"next/head": ["node_modules/react-helmet"],
			"next/dynamic": ["src/storybook-polyfills/next-dynamic"],
			"next/link": ["src/storybook-polyfills/next-link"]
		}
    },
    "include": ["src/**/*.ts", "src/**/*.tsx"],
    "exclude": ["node_modules", "src/**/*.stories.*", "src/storybook-addons/**/*"]
}
