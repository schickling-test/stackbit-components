{
  "name": "@stackbit/components",
  "version": "0.1.2",
  "description": "Stackbit components library",
  "keywords": [
    "stackbit",
    "components"
  ],
  "main": "index.js",
  "watch": {
    "build-dist": {
      "patterns": [
        "src/base/*.js",
        "src/components/**/*.js",
        "src/layouts/**/*.js"
      ],
      "extensions": "js,jsx",
      "quiet": false,
      "delay": 2500
    }
  },
  "scripts": {
    "test": "stackbit validate",
    "develop": "./develop.sh",
    "storybook": "./generate-storybook-dynamic.js && start-storybook -s ./public -p 6006",
    "build-themes": "./build-themes.sh",
    "build-storybook": "build-storybook -s ./public",
    "build": "npm run build-themes && ./generate-storybook-dynamic.js && npm run build-storybook",
    "build-dist": "./build-dist.js --clean",
    "pretty": "prettier --write src",
    "version-minor": "npm version minor -m \"bumped version to v%s\"",
    "version-patch": "npm version patch -m \"bumped version to v%s\"",
    "watch": "npm-watch"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stackbit/components.git"
  },
  "author": "Stackbit Inc.",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stackbit/components/issues"
  },
  "homepage": "https://components.stackbit.com/",
  "dependencies": {
    "classnames": "^2.3.1",
    "markdown-to-jsx": "^7.1.3"
  },
  "devDependencies": {
    "@babel/cli": "^7.14.5",
    "@babel/core": "^7.14.6",
    "@babel/preset-env": "^7.14.7",
    "@babel/preset-react": "^7.14.5",
    "@stackbit/cli": "^0.1.14",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/addon-postcss": "^2.0.0",
    "@storybook/react": "^6.2.9",
    "concurrently": "^6.2.0",
    "fs-extra": "^10.0.0",
    "npm-watch": "^0.11.0",
    "postcss": "^8.3.4",
    "prettier": "2.3.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "react-helmet": "^6.1.0",
    "tailwindcss": "^2.2.2"
  },
  "peerDependencies": {
    "react": ">=16"
  }
}
